* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.App {
  min-height: 100vh;
  background: linear-gradient(135deg, #0047AB 0%, #00A651 100%);
}

/* ========== LOGIN PAGE ========== */
.login-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.login-box {
  background: white;
  border-radius: 20px;
  box-shadow: 0 25px 70px rgba(0, 0, 0, 0.4);
  max-width: 480px;
  width: 100%;
  padding: 48px 40px;
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.logo-section {
  text-align: center;
  margin-bottom: 32px;
}

.logo-section h1 {
  font-size: 56px;
  color: #0047AB;
  font-weight: 800;
  margin-bottom: 12px;
  letter-spacing: 2px;
}

.subtitle {
  font-size: 16px;
  color: #333;
  font-weight: 600;
  margin-bottom: 6px;
}

.tagline {
  font-size: 13px;
  color: #666;
  font-style: italic;
}

form h2 {
  font-size: 22px;
  color: #333;
  margin-bottom: 24px;
  text-align: center;
  font-weight: 600;
}

.form-group {
  margin-bottom: 24px;
}

.form-group label {
  display: block;
  margin-bottom: 8px;
  color: #333;
  font-weight: 600;
  font-size: 14px;
}

.form-group input {
  width: 100%;
  padding: 14px 16px;
  border: 2px solid #e0e0e0;
  border-radius: 10px;
  font-size: 15px;
  transition: all 0.3s;
  font-family: inherit;
}

.form-group input:focus {
  outline: none;
  border-color: #0047AB;
  box-shadow: 0 0 0 3px rgba(0, 71, 171, 0.1);
}

.login-btn {
  width: 100%;
  padding: 16px;
  background: linear-gradient(135deg, #0047AB 0%, #0056d6 100%);
  color: white;
  border: none;
  border-radius: 10px;
  font-size: 16px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 4px 15px rgba(0, 71, 171, 0.3);
}

.login-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 71, 171, 0.4);
}

.login-btn:active {
  transform: translateY(0);
}

.login-btn:disabled {
  background: #ccc;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

.error-message {
  background: #ffebee;
  color: #c62828;
  padding: 14px;
  border-radius: 10px;
  margin-bottom: 20px;
  text-align: center;
  font-size: 14px;
  font-weight: 600;
  border-left: 4px solid #c62828;
}

.demo-credentials {
  margin-top: 28px;
  padding: 20px;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  border-radius: 10px;
  text-align: center;
  border: 2px dashed #ccc;
}

.demo-credentials p {
  margin: 6px 0;
  font-size: 14px;
}

.demo-credentials strong {
  color: #0047AB;
  font-size: 15px;
}

.demo-credentials code {
  background: white;
  padding: 4px 12px;
  border-radius: 6px;
  font-size: 13px;
  color: #0047AB;
  font-weight: 600;
}

.security-badge {
  margin-top: 20px;
  padding: 16px;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-radius: 10px;
  text-align: center;
  font-size: 12px;
  color: #0d47a1;
  font-weight: 600;
}

.security-badge p {
  margin: 4px 0;
}

.login-footer {
  margin-top: 28px;
  padding-top: 24px;
  border-top: 2px solid #f0f0f0;
  text-align: center;
  font-size: 12px;
  color: #666;
}

.login-footer p {
  margin: 6px 0;
}

.login-footer strong {
  color: #0047AB;
  font-weight: 700;
}

/* ========== DASHBOARD ========== */
.dashboard {
  min-height: 100vh;
  padding: 40px 20px;
}

.dashboard-header {
  text-align: center;
  color: white;
  margin-bottom: 48px;
}

.dashboard-header h1 {
  font-size: 64px;
  margin-bottom: 12px;
  font-weight: 800;
  letter-spacing: 3px;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
}

.dashboard-header .tagline {
  font-size: 20px;
  font-style: italic;
  text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3);
}

.user-card {
  background: white;
  border-radius: 20px;
  padding: 48px;
  max-width: 900px;
  margin: 0 auto;
  box-shadow: 0 25px 70px rgba(0, 0, 0, 0.4);
}

.user-info h2 {
  color: #0047AB;
  margin-bottom: 28px;
  font-size: 32px;
  font-weight: 700;
}

.user-details p {
  margin: 14px 0;
  font-size: 17px;
  color: #333;
}

.user-details strong {
  color: #0047AB;
  font-weight: 700;
}

.role-badge {
  background: linear-gradient(135deg, #0047AB 0%, #0056d6 100%);
  color: white;
  padding: 6px 16px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.demo-features {
  margin: 36px 0;
  padding: 32px;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  border-radius: 16px;
}

.demo-features h3 {
  color: #0047AB;
  margin-bottom: 20px;
  font-size: 24px;
  font-weight: 700;
}

.demo-features ul {
  list-style: none;
}

.demo-features li {
  margin: 12px 0;
  font-size: 17px;
  display: flex;
  align-items: center;
  gap: 12px;
}

.status-active {
  font-size: 20px;
}

.status-pending {
  font-size: 20px;
  opacity: 0.6;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 24px;
  margin: 32px 0;
}

.stat-card {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  padding: 28px;
  border-radius: 16px;
  text-align: center;
  border: 2px solid #90caf9;
}

.stat-number {
  font-size: 40px;
  font-weight: 800;
  color: #0047AB;
  margin-bottom: 8px;
}

.stat-label {
  font-size: 14px;
  color: #0d47a1;
  font-weight: 600;
}

.logout-btn {
  width: 100%;
  padding: 16px;
  background: linear-gradient(135deg, #c62828 0%, #d32f2f 100%);
  color: white;
  border: none;
  border-radius: 10px;
  font-size: 16px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 4px 15px rgba(198, 40, 40, 0.3);
}

.logout-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(198, 40, 40, 0.4);
}

.logout-btn:active {
  transform: translateY(0);
}

/* Responsive */
@media (max-width: 768px) {
  .logo-section h1 {
    font-size: 42px;
  }
  
  .dashboard-header h1 {
    font-size: 48px;
  }
  
  .user-card {
    padding: 32px 24px;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
}

/* ========== LAYOUT WITH SIDEBAR ========== */

.app-with-sidebar {
  display: flex;
  min-height: 100vh;
  background: linear-gradient(135deg, #0047ab, #00a651);
}

.sidebar {
  width: 260px;
  background: #061423;
  color: #e3f2fd;
  display: flex;
  flex-direction: column;
  padding: 24px 16px;
  box-shadow: 4px 0 16px rgba(0, 0, 0, 0.45);
}

.sidebar-header {
  margin-bottom: 24px;
}

.sidebar-logo {
  font-size: 24px;
  font-weight: 800;
  letter-spacing: 2px;
}

.sidebar-subtitle {
  font-size: 12px;
  color: #90caf9;
}

.sidebar-user {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 10px;
  border-radius: 12px;
  background: rgba(144, 202, 249, 0.12);
  margin-bottom: 24px;
}

.avatar-circle {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: #00a651;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  color: #fff;
}

.sidebar-user-name {
  font-size: 14px;
  font-weight: 600;
}

.sidebar-user-role {
  font-size: 12px;
  color: #b0bec5;
  text-transform: capitalize;
}

.sidebar-nav {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.nav-item {
  text-align: left;
  background: transparent;
  border: none;
  color: #cfd8dc;
  padding: 10px 12px;
  border-radius: 8px;
  font-size: 14px;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 8px;
}

.nav-item:hover {
  background: rgba(144, 202, 249, 0.16);
}

.nav-item-active {
  background: #1565c0;
  color: #ffffff;
}

.sidebar-footer {
  margin-top: 16px;
  font-size: 11px;
  color: #90caf9;
}

.btn-logout {
  margin-top: 8px;
  font-size: 13px;
}

/* MAIN CONTENT AREA */

.main-content {
  flex: 1;
  padding: 32px;
  color: #111;
  background: radial-gradient(circle at top left, rgba(255, 255, 255, 0.7), #f2f5f7);
}

/* PAGE CONTENT */

.page {
  max-width: 1000px;
  margin: 0 auto;
}

.page-title {
  margin: 0 0 4px;
  font-size: 26px;
  font-weight: 700;
}

.page-subtitle {
  margin: 0 0 20px;
  color: #666;
  font-size: 14px;
}

.cards-grid {
  display: grid;
  gap: 16px;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  margin-top: 8px;
}

.info-card {
  background: #ffffff;
  border-radius: 14px;
  padding: 18px 16px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
}

.info-card h3 {
  margin-top: 0;
  margin-bottom: 8px;
  font-size: 16px;
}

/* TABLES */

.table-wrapper {
  background: #ffffff;
  border-radius: 14px;
  padding: 16px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
}

.simple-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 14px;
}

.simple-table th,
.simple-table td {
  padding: 10px;
  border-bottom: 1px solid #e0e0e0;
}

.simple-table th {
  text-align: left;
  font-weight: 600;
  background: #f5f5f5;
}

.status-badge {
  display: inline-block;
  padding: 4px 10px;
  border-radius: 999px;
  font-size: 11px;
  font-weight: 600;
}

.status-active {
  background: #e8f5e9;
  color: #2e7d32;
}

.status-discharged {
  background: #fff3e0;
  color: #ef6c00;
}

/* PLACEHOLDER BOX */

.placeholder-box {
  background: #ffffff;
  border-radius: 10px;
  padding: 16px;
  font-size: 14px;
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
}

/* SMALL UTILITIES */

.list {
  padding-left: 18px;
  margin: 8px 0 0;
}

/* RESPONSIVE */

@media (max-width: 768px) {
  .app-with-sidebar {
    flex-direction: column;
  }

  .sidebar {
    width: 100%;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 8px;
  }

  .sidebar-nav {
    flex-direction: row;
    flex-wrap: wrap;
  }

  .main-content {
    padding: 16px;
  }
}

.sidebar-hospital {
  display: flex;
  align-items: center;
  gap: 12px;
  margin: 16px 0 24px;
  padding: 10px 12px;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.05);
}

.hospital-logo-circle {
  width: 36px;
  height: 36px;
  border-radius: 999px;
  background: #00a651;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  color: white;
  font-size: 18px;
}

.hospital-info {
  display: flex;
  flex-direction: column;
}

.hospital-name {
  font-size: 14px;
  font-weight: 600;
  color: #ffffff;
}

.hospital-meta {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.75);
}

.small-error {
  color: #c62828;
  font-size: 12px;
  margin-top: 8px;
}
